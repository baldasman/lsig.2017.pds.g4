<%= form_for @order, :url => url_for(:controller => 'order', :action => 'update'), html: {class: 'container'}  do |f| %>
    <div class="form-group">

      <label for="description"><%= t('description') %></label>
      <%= f.text_field :description %>
      <% if flash[:error] && flash[:error]['description'] %>
          <div class="alert danger"><%= flash[:error]['description'].join('<br/>') %></div>
      <% end %>

      <label for="delivery_date"><%= t('description') %></label>
      <%= f.text_field :description %>
      <% if flash[:error] && flash[:error]['description'] %>
          <div class="alert danger"><%= flash[:error]['description'].join('<br/>') %></div>
      <% end %>

      <label for="unit_price"><%= t('unit_price') %></label>
      <%= f.text_field :unit_price %>
      <% if flash[:error] && flash[:error]['unit_price'] %>
          <div class="alert danger"><%= flash[:error]['unit_price'].join('<br/>') %></div>
      <% end %>

      <label for="quantity"><%= t('quantity') %></label>
      <%= f.text_field :quantity %>
      <% if flash[:error] && flash[:error]['quantity'] %>
          <div class="alert danger"><%= flash[:error]['quantity'].join('<br/>') %></div>
      <% end %>

         <div align="right"><%= f.submit t('save')%></div>
      <button><%= link_to t('cancel'), order_show_path%></button>
      <% end %>