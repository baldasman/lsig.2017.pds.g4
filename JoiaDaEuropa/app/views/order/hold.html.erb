<!-- Pag4Content -->
<div class="col-lg-10 text-left">
  <h1><i>ENCOMENDAS PENDENTES</i></h1>
  <br /> <br />

  <div class="w3-display-topleft" style="padding-top: 80px">
    <a href="/order/hold" class="w3-button w3-padding-small w3-small">ENCOMENDAS PENDENTES</a>
    <a href="/order/cancel" class="w3-button w3-padding-small w3-small">ENCOMENDAS CANCELADAS</a>
    <a href="/order/end" class="w3-button w3-padding-small w3-small">ENCOMENDAS CONCLUIDAS</a>
  </div>

  <div class="col-lg-10" style="padding-top: 50px">
    <table class="w3-table">
    <thead>
    <tr>
      <th>Nº</th>
      <th>Descrição</th>
      <th>Data de Entrega</th>
      <th>Preço Unitário</th>
      <th>Quantidade</th>
      <th>Estado</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.description %></td>
          <td><%= order.delivery_date %></td>
          <td><%= order.unit_price %></td>
          <td><%= order.quantity %></td>
          <td><%= order.state.description %></td>
          <td><%= link_to t("detail"), order_detail_path(order.id) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>