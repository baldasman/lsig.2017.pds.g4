<p/>
<form class="jumbotron">
  <div class="input-group">
    <a href="/order/new" class="btn" role="button">NOVA ENCOMENDA</a>
    <a class="col-md-3">
        <%= link_to 'PT', '/?lang=pt' %>
      <span>|</span>
        <%= link_to 'EN', '/?lang=en' %>
      </a>
    <a class="col-md-3">
        <% if current_user %>
            <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete'} %>
        <% else %>
            <%= link_to 'Sign In', new_user_session_path %>
        <% end %>
      </a>

    <%= yield %>
