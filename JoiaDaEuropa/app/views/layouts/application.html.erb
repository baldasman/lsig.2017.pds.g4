    <%= stylesheet_link_tag 'estilos', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Global styles here -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<!-- N4vbar -->
<nav data-spy="scroll" data-target=".navbar" class="navbar navbar-default navbar-fixed-top">

    <div class="container">
        <div class="navbar-header">
            <a class="button" href="/home/index"><img src="<%= asset_path '2.png' %>" width="190px"></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/profile/index"><%= t("profile") %></a></li>
                <li><a href="/home/index/#quem_somos"><%= t("about_us") %></a></li>
                <li><a href="/home/index/#missao"><%= t("mission") %></a></li>
                <li><a href="/home/index/#noticia"><%= t("news") %></a></li>
                <li><a href="/home/index/#contacto"><%= t("contact") %></a></li>
                <li><a href="/home/index/#parceria"><%= t("partnerships") %></a></li>
                <li><a onclick="openNav('myNavl')">LOGIN</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="jumbotron">
    <header class="row">
        <div class="col-md-3">
            <%= link_to 'PT', '?lang=pt' %>
            <span>|</span>
            <%= link_to 'EN', '?lang=en' %>
        </div>
        <div class="col-md-6">
        </div>
        <div class="col-md-3">
            <% if current_user %>
                <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete'} %>
            <% else %>
                <%= link_to 'Sign In', new_user_session_path %>
            <% end %>
        </div>
    </header>
</div>

<div align="right">
    <%= form_tag("/search", method: "get") do %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
    <% end %>
</div>

<!-- Sid4bar -->
<div class="container-fluid text-left">
    <div class="row content">
        <div class="w3-sidebar w3-bar-block">
            <p><a href="/profile/index" class="w3-bar-item"><%= t("profile") %></a></p>
            <p><a href="/client_area/index" class="w3-bar-item"><%= t("client_area") %></a></p>
            <p><a href="/order/hold" class="w3-bar-item"><%= t("orders") %></a></p>
            <p><a href="/order/new" class="w3-bar-item"><%= t("new_order") %></a></p>
        </div>
    </div>
</div>


<%= yield %>
<% if notice %>
    <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
        <%= notice %>
    </div>
<% end %>
<% if alert %>
    <div class="alert alert-warning" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
        <%= alert %>
    </div>
<% end %>

<!-- Fo4ter -->
<div class="footer container-fluid text-center">
    <a href="" title="To Top">
        <span class="glyphicon glyphicon-chevron-up"></span>
    </a>
    <p>2016-2017 | PROJETO E DESENVOLVIMENTO DE SOFTWARE | GRUPO 4</p>
</div>
</body>
</html>

