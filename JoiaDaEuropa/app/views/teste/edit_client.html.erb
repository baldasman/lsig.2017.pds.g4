<%= form_for @client, :url => url_for(:controller => 'teste', :action => 'save_client'), html: {class: 'container'} do |f| %>
    <div class="form-group">
      <label for="name"><%= t('name') %></label>
      <%= f.text_field :name %>

      <% if flash[:error] && flash[:error]['name'] %>
          <div class="alert danger"><%= flash[:error]['name'].join('<br/>') %></div>
      <% end %>
    </div>

    <%= f.submit t('save') %>
<% end %>